          <!--begin::Brand Link-->
          <a href={htmlPath + "/index.html"} class="brand-link">
            <!--begin::Brand Image-->
            <img
              src={path + "/assets/img/AdminLTELogo.png"}
              alt="AdminLTE Logo"
              class="brand-image opacity-75 shadow"
            />
            <!--end::Brand Image-->
            <!--begin::Brand Text-->
            <span class="brand-text fw-light">ADECO</span>
            <!--end::Brand Text-->
          </a>
          <!--end::Brand Link-->
        </div>
        <!--end::Sidebar Brand-->

        <!--begin::Sidebar Wrapper-->
        <div class="sidebar-wrapper">
          <nav class="mt-2">
            <!--begin::Sidebar Menu-->
            <ul
              class="nav sidebar-menu flex-column"
              data-lte-toggle="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a href={htmlPath + "/generate/view-owner-data.html"} class="nav-link">
                  <i class="nav-icon bi bi-circle-fill"></i>
                  <p>Estadísticas</p>
                </a>
              </li>

            <li class="nav-item">
                <a href= "#" class="nav-link">
                  <i class="nav-icon bi bi-circle-fill"></i>
                  <p>Reportes</p>
                </a>
              </li>
            </ul>
            <!--end::Sidebar Menu-->
          </nav>
        </div>
        <!--end::Sidebar Wrapper-->
