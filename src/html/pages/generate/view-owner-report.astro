          <!--end::Container-->
        </div>
        <!--end::App Content Header-->
        <!--begin::App Content-->
        <div class="app-content">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <!--begin::Col-->
              <div class="col-12">
                <!--begin::Card-->
                <div class="card">
                  <!--begin::Card Header-->
                  <div class="card-header">
                    <!--begin::Card Title-->
                    <h3 class="card-title">Mis Inmuebles</h3>
                    <!--end::Card Title-->

                    <!--begin::Card Toolbar-->
                    <div class="card-tools">

                      
                    
                     

                    </div>
                    <!--end::Card Toolbar-->
                  

                      <!--end::Col-->
                      <!--begin::Col-->
                    
                      <!--end::Col-->
                      <!--begin::Col-->
                      <div class="col-md-6">
                        <div id="sidebar-color-code" class="w-100"></div>
                        
                       </div>
                      <!--end::Col-->
                    </div>

                      <div class="m-4">
                        <p>Filtrar desde</p>
                        <input type="text" class="form-control" placeholder="01/01/2024" />
                        <p> hasta </p>
                        <input type="text" class="form-control" placeholder="01/01/2024" />
                      </div>

                    <!--end::Row-->
                   <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Fecha</th>
                        <th scope="col">Monto</th>
                        <th scope="col">Transacción</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Residencial</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="col">10/09/2024</th>
                        <th scope="col">$10,000</th>
                        <th scope="col">Ingreso</th>
                        <th scope="col">Pago de renta mes agosto</th>
                        <th scope="col">Brunis V</th>
                      </tr>            

                      <tr>
                        <th scope="col">10/09/2024</th>
                        <th scope="col">$18,000</th>
                        <th scope="col">Ingreso</th>
                        <th scope="col">Pago de renta mes agosto</th>
                        <th scope="col">Florencia</th>
                      </tr> 

                      <tr>
                        <th scope="col">10/09/2024</th>
                        <th scope="col">$4,000</th>
                        <th scope="col">Egreso</th>
                        <th scope="col">Pago de mantenimiento mes agosto</th>
                        <th scope="col">Brunis</th>
                      </tr> 
                      
                      <tr>
                        <th scope="col">10/09/2024</th>
